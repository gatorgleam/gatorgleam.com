---
import '../styles/shared.css';
import '../styles/spacing-system.css';
import '../styles/accessibility.css';
import '../styles/layout-fixes.css';
import Navigation from '../components/Navigation.astro';
const { frontmatter } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{frontmatter.title} – Gator Gleam</title>
    {frontmatter.description && <meta name="description" content={frontmatter.description} />}
    
    <!-- SEO and Open Graph meta tags -->
    <meta property="og:title" content={`${frontmatter.title} – Gator Gleam`} />
    {frontmatter.description && <meta property="og:description" content={frontmatter.description} />}
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:image" content="/images/gator-gleam-logo.png" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${frontmatter.title} – Gator Gleam`} />
    {frontmatter.description && <meta name="twitter:description" content={frontmatter.description} />}
    <meta name="twitter:image" content="/images/gator-gleam-logo.png" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Preload critical fonts -->
    <link
      rel="preload"
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700;800&display=swap"
      as="style"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <noscript>
      <link
        href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700;800&display=swap"
        rel="stylesheet"
      />
    </noscript>
    
    <!-- Font Awesome -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    
    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Gator Gleam Digital Marketing",
        "url": "https://gator-gleam.vercel.app",
        "logo": "https://gator-gleam.vercel.app/images/gator-gleam-logo.png",
        "description": "Expert digital marketing services including web design, social media management, email marketing, and data analytics to grow your business.",
        "sameAs": [
          "https://www.instagram.com/gatorgleamagency",
          "https://www.linkedin.com/company/gator-gleam"
        ],
        "contactPoint": {
          "@type": "ContactPoint",
          "contactType": "customer service",
          "availableLanguage": "English"
        },
        "service": [
          {
            "@type": "Service",
            "name": "Website Design & Development",
            "description": "Custom-crafted websites that combine stunning design with powerful functionality"
          },
          {
            "@type": "Service", 
            "name": "Social Media Management",
            "description": "Strategic social media management that builds engagement and grows your following"
          },
          {
            "@type": "Service",
            "name": "Email Marketing",
            "description": "Strategic email campaigns that nurture leads and drive conversions"
          }
      }
    </script>
    
    <style>
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }
      body {
        font-family: 'Montserrat', sans-serif;
        background: #fff;
        color: #1a1a1a;
        line-height: 1.6;
        overflow-x: hidden;
      }

      /* Add padding-top to main content to avoid being hidden under fixed header */
      main {
        padding-top: 70px; /* Match nav height */
      }

      /* Responsive padding adjustments */
      @media (max-width: 768px) {
        main {
          padding-top: 65px;
        }
      }

      @media (min-width: 1024px) {
        main {
          padding-top: 75px;
        }
      }
    </style>
  </head>
  <body>
    <!-- Skip to main content link for accessibility -->
    <a href="#main-content" class="skip-link">Skip to main content</a>
    
    <Navigation />

    <main id="main-content">
      <slot />
    </main>
  </body>
</html>
