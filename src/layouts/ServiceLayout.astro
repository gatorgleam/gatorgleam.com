---
import '../styles/shared.css';
import '../styles/tokens.css';
import '../styles/tailwind.css';
import '../styles/service-detail.css';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
const { frontmatter } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700;800&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <title>{frontmatter.title} – SeaForth Strategies</title>
    {frontmatter.description && <meta name="description" content={frontmatter.description} />}
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- SEO Meta Tags -->
    <meta property="og:title" content={`${frontmatter.title} – SeaForth Strategies`} />
    {frontmatter.description && <meta property="og:description" content={frontmatter.description} />}
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:image" content="/images/logo.png" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${frontmatter.title} – SeaForth Strategies`} />
    {frontmatter.description && <meta name="twitter:description" content={frontmatter.description} />}
    <meta name="twitter:image" content="/images/logo.png" />
  </head>
  <body>
    <!-- Skip to main content link for accessibility -->
    <a href="#main-content" class="skip-link">Skip to main content</a>
    
    <Navigation />

    <!-- Service Hero Section -->
    <div class="service-hero">
      <div class="hero-background">
        <div class="hero-shapes">
          <div class="shape shape-1"></div>
          <div class="shape shape-2"></div>
          <div class="shape shape-3"></div>
          <div class="shape shape-4"></div>
        </div>
        <div class="floating-elements">
          <div class="floating-icon floating-icon-1">
            <i class="fas fa-star"></i>
          </div>
          <div class="floating-icon floating-icon-2">
            <i class="fas fa-rocket"></i>
          </div>
          <div class="floating-icon floating-icon-3">
            <i class="fas fa-lightbulb"></i>
          </div>
        </div>
      </div>
      <div class="hero-content">
        <div class="service-icon-container">
          <div class="service-icon">
            <i class={frontmatter.icon}></i>
          </div>
        </div>
        <h1 class="hero-title">{frontmatter.title}</h1>
        <p class="hero-subtitle">{frontmatter.description}</p>
        <div class="hero-cta">
          <a href="#service-details" class="hero-button primary">Learn More</a>
          <a 
            href="https://calendly.com/gatorgleamsmm/30min" 
            target="_blank" 
            rel="noopener noreferrer" 
            class="hero-button secondary"
          >
            Get Started
          </a>
        </div>
      </div>
    </div>

    <!-- Main Service Content -->
    <main id="main-content" class="service-content" data-section="service-details">
      <slot />
    </main>

    <!-- CTA Section -->
    <section class="cta">
      <div class="container">
        <h2>Ready to Get Started?</h2>
        <p>Let's discuss how we can help achieve your goals.</p>
        <a
          href="https://calendly.com/gatorgleamsmm/30min"
          target="_blank"
          rel="noopener noreferrer"
          class="cta-button"
        >
          Schedule a Call
        </a>
      </div>
    </section>
    <Footer />
  </body>
</html>

<style>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }
  
  body {
    font-family: 'Montserrat', sans-serif;
    background: var(--color-off-white);
    color: var(--color-text-primary);
    line-height: 1.6;
    overflow-x: hidden;
    scroll-behavior: smooth;
  }
  
  /* Final CTA Section at Bottom */
  .cta {
    background: linear-gradient(135deg, rgba(42, 124, 132, 0.05) 0%, rgba(31, 92, 98, 0.08) 100%);
    text-align: center;
    padding: 6rem 2rem;
    margin-top: 4rem;
  }
  
  .cta h2 {
    color: var(--color-teal);
    margin-bottom: 1.5rem;
  }
  
  .cta p {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
    margin-bottom: 2.5rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta .cta-button {
    display: inline-block;
    padding: 1.125rem 2.75rem;
    background: var(--color-teal);
    color: var(--color-white);
    text-decoration: none;
    border-radius: 50px;
    font-weight: 700;
    font-size: 1.0625rem;
    transition: all 0.35s ease;
    box-shadow: 0 4px 15px rgba(42, 124, 132, 0.3);
  }

  .cta .cta-button:hover {
    background: var(--color-teal-dark);
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(213, 163, 83, 0.4);
    color: var(--color-white);
  }
  
  /* Mobile Responsive */
  @media (max-width: 768px) {
    .cta {
      padding: 4rem 1.5rem;
    }
    
    .cta h2 {
      font-size: 1.875rem;
    }
    
    .cta p {
      font-size: 1.0625rem;
    }
  }
</style>