---
const { title, description, icon } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <title>{title} â€“ Gator Gleam</title>
  </head>
  <body>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="/services">Services</a></li>
        <li><a href="/portfolio">Portfolio</a></li>
        <li><a href="/resources">Resources</a></li>
        <li><a href="/contact">Contact</a></li>
      </ul>
    </nav>

    <div class="service-header">
      <div class="service-icon">
        <i class={icon}></i>
      </div>
      <h1>{title}</h1>
      <p>{description}</p>
    </div>

    <div class="service-content">
      <div class="intro-section">
        <slot name="intro" />
      </div>

      <div class="features-grid">
        <slot name="features" />
      </div>

      <div class="process-section">
        <h2>Our Process</h2>
        <div class="process-grid">
          <slot name="process" />
        </div>
      </div>

      <div class="benefits-section">
        <h2>Why Choose Our Services</h2>
        <div class="benefits-grid">
          <slot name="benefits" />
        </div>
      </div>

      <div class="portfolio-section">
        <h2>Success Stories</h2>
        <div class="portfolio-grid">
          <slot name="portfolio" />
        </div>
      </div>

      <div class="cta-section">
        <h2>Ready to Get Started?</h2>
        <p>Let's discuss how we can help achieve your goals.</p>
        <a href="/contact" class="cta-button">Get Your Free Consultation</a>
      </div>
    </div>
  </body>
</html>

<style>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }
  body {
    font-family: 'Montserrat', sans-serif;
    background: #fff;
    color: #1a1a1a;
    line-height: 1.6;
    overflow-x: hidden;
  }
  nav {
    background: rgba(255, 255, 255, 0.95);
    padding: 1.2rem 2rem;
    text-align: center;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    position: sticky;
    top: 0;
    z-index: 10;
    backdrop-filter: blur(8px);
  }
  nav ul {
    display: flex;
    justify-content: center;
    gap: 3rem;
    list-style: none;
  }
  nav a {
    text-decoration: none;
    color: #1a1a1a;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    padding: 0.5rem 1rem;
    border-radius: 30px;
  }
  nav a:hover {
    color: #ff69b4;
    background: linear-gradient(135deg, rgba(255,105,180,0.1), rgba(138,43,226,0.1));
  }
  .service-header {
    background: linear-gradient(135deg, #ff69b4, #8a2be2);
    padding: 8rem 2rem;
    text-align: center;
    color: white;
    position: relative;
    clip-path: polygon(0 0, 100% 0, 100% 85%, 0 100%);
  }
  .service-header h1 {
    font-size: 3.5rem;
    margin-bottom: 1.5rem;
    animation: slideUp 1s ease-out forwards;
  }
  .service-header p {
    font-size: 1.5rem;
    max-width: 800px;
    margin: 0 auto;
    opacity: 0;
    animation: fadeIn 1s ease-out 0.3s forwards;
  }
  .service-icon {
    font-size: 4rem;
    margin-bottom: 2rem;
    animation: fadeIn 1s ease-out;
  }
  .service-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 4rem 2rem;
  }
  .intro-section {
    text-align: center;
    max-width: 800px;
    margin: 0 auto 4rem;
  }
  .intro-section p {
    font-size: 1.2rem;
    color: #555;
    margin: 1.5rem 0;
  }
  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin: 4rem 0;
  }
  .feature-card {
    background: rgba(255, 255, 255, 0.95);
    border-radius: 20px;
    padding: 2rem;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
    border: 1px solid rgba(255,255,255,0.2);
  }
  .feature-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgba(255,105,180,0.15);
  }
  .feature-icon {
    font-size: 2.5rem;
    color: #ff69b4;
    margin-bottom: 1rem;
  }
  .process-section {
    margin: 6rem 0;
    text-align: center;
  }
  .process-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }
  .process-step {
    background: white;
    border-radius: 20px;
    padding: 2rem;
    box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    transition: all 0.3s ease;
  }
  .process-step:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(255,105,180,0.15);
  }
  .step-number {
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, #ff69b4, #8a2be2);
    border-radius: 50%;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1rem;
    font-weight: bold;
  }
  .benefits-section {
    background: linear-gradient(135deg, rgba(255,105,180,0.05), rgba(138,43,226,0.05));
    padding: 6rem 2rem;
    margin: 4rem -2rem;
    text-align: center;
  }
  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }
  .portfolio-section {
    padding: 6rem 0;
    text-align: center;
  }
  .portfolio-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }
  .cta-section {
    text-align: center;
    margin: 6rem 0;
    padding: 4rem 2rem;
    background: linear-gradient(135deg, rgba(255,105,180,0.1), rgba(138,43,226,0.1));
    border-radius: 20px;
  }
  .cta-button {
    display: inline-block;
    padding: 1rem 2.5rem;
    background: linear-gradient(to right, #ff69b4, #8a2be2);
    color: white;
    text-decoration: none;
    border-radius: 50px;
    font-weight: 600;
    transition: all 0.3s ease;
    margin-top: 2rem;
  }
  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0,0,0,0.2);
  }
  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
</style>
