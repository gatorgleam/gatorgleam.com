---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PageHeader from '../../components/layout/PageHeader.astro';
import Section from '../../components/layout/Section.astro';
import Button from '../../components/ui/Button.astro';

const frontmatter = {
  title: 'Digital Product Development',
  description:
    'Custom digital solutions and products that streamline your business and enhance user experience.',
};
---

<BaseLayout frontmatter={frontmatter}>
  <PageHeader>
    <Fragment slot="title">{frontmatter.title}</Fragment>
    <Fragment slot="subtitle">{frontmatter.description}</Fragment>
  </PageHeader>

  <Section bg="default">
    <div class="mx-auto max-w-3xl text-center">
      <h2 class="text-3xl sm:text-4xl font-bold text-neutral-950 mb-6">Custom Digital Solutions</h2>
      <p class="text-lg text-neutral-600 leading-relaxed">
        From mobile apps to web applications, we create digital products that solve real problems and
        delight users. Our development process focuses on user experience, performance, and
        scalability.
      </p>
    </div>
  </Section>

  <Section bg="panel">
    <h2 class="text-3xl font-bold text-center text-neutral-950 mb-12">Our Digital Product Services</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      <div class="group rounded-2xl border border-neutral-200 shadow-lg bg-white p-8 transition-all duration-300 hover:shadow-2xl hover:-translate-y-2 hover:border-brand-teal">
        <div class="text-brand-teal text-4xl mb-4 transition-transform duration-300 group-hover:scale-110">
          <i class="fas fa-mobile-alt" aria-hidden="true"></i>
        </div>
        <h3 class="text-xl font-bold text-neutral-950 mb-3">Mobile Apps</h3>
        <p class="text-neutral-600 leading-relaxed">Native and cross-platform mobile applications that engage users and drive business results.</p>
      </div>
      <div class="group rounded-2xl border border-neutral-200 shadow-lg bg-white p-8 transition-all duration-300 hover:shadow-2xl hover:-translate-y-2 hover:border-brand-teal">
        <div class="text-brand-teal text-4xl mb-4 transition-transform duration-300 group-hover:scale-110">
          <i class="fas fa-globe" aria-hidden="true"></i>
        </div>
        <h3 class="text-xl font-bold text-neutral-950 mb-3">Web Applications</h3>
        <p class="text-neutral-600 leading-relaxed">Powerful web apps that streamline operations and provide exceptional user experiences.</p>
      </div>
      <div class="group rounded-2xl border border-neutral-200 shadow-lg bg-white p-8 transition-all duration-300 hover:shadow-2xl hover:-translate-y-2 hover:border-brand-teal">
        <div class="text-brand-teal text-4xl mb-4 transition-transform duration-300 group-hover:scale-110">
          <i class="fas fa-cogs" aria-hidden="true"></i>
        </div>
        <h3 class="text-xl font-bold text-neutral-950 mb-3">API Development</h3>
        <p class="text-neutral-600 leading-relaxed">Robust APIs and integrations that connect your systems and automate workflows.</p>
      </div>
      <div class="group rounded-2xl border border-neutral-200 shadow-lg bg-white p-8 transition-all duration-300 hover:shadow-2xl hover:-translate-y-2 hover:border-brand-teal">
        <div class="text-brand-teal text-4xl mb-4 transition-transform duration-300 group-hover:scale-110">
          <i class="fas fa-shield-alt" aria-hidden="true"></i>
        </div>
        <h3 class="text-xl font-bold text-neutral-950 mb-3">Security & Testing</h3>
        <p class="text-neutral-600 leading-relaxed">Comprehensive security measures and thorough testing to ensure reliable, secure products.</p>
      </div>
    </div>
  </Section>

  <Section bg="default" class="text-center">
    <div class="max-w-2xl mx-auto">
      <h3 class="text-3xl font-bold text-neutral-950 mb-4">Ready to build your digital product?</h3>
      <p class="text-lg text-neutral-600 mb-8">Let's create something amazing together.</p>
      <Button variant="primary" href="/contact" class="text-lg px-8 py-4">Start Your Project</Button>
    </div>
  </Section>
</BaseLayout>
