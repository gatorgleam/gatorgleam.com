---
import ServiceLayout from '../../layouts/ServiceLayout.astro';

const frontmatter = {
  title: 'Paid Advertising',
  description:
    'Strategic paid campaigns that reach your ideal customers and deliver measurable results.',
  icon: 'fas fa-bullhorn',
};
---

<ServiceLayout frontmatter={frontmatter}>
  <div class="service-content">
    <h2>Paid Advertising That Delivers</h2>
    <p>
      Maximize your advertising budget with strategic paid campaigns across Google, Facebook,
      Instagram, and other platforms. We focus on targeting the right audience with compelling
      creatives to drive conversions and growth.
    </p>

    <div class="features-section">
      <h2>Our Paid Advertising Services</h2>
      <div class="features-grid">
        <div class="feature-card">
          <div class="feature-icon">
            <i class="fas fa-search"></i>
          </div>
          <h3>Search Advertising</h3>
          <p>Google Ads campaigns that capture high-intent customers at the perfect moment.</p>
        </div>

        <div class="feature-card">
          <div class="feature-icon">
            <i class="fas fa-users"></i>
          </div>
          <h3>Social Media Ads</h3>
          <p>
            Facebook, Instagram, and LinkedIn campaigns that build brand awareness and drive
            engagement.
          </p>
        </div>

        <div class="feature-card">
          <div class="feature-icon">
            <i class="fas fa-sync"></i>
          </div>
          <h3>Retargeting</h3>
          <p>
            Re-engage website visitors and past customers with personalized retargeting campaigns.
          </p>
        </div>

        <div class="feature-card">
          <div class="feature-icon">
            <i class="fas fa-chart-bar"></i>
          </div>
          <h3>Campaign Optimization</h3>
          <p>
            Continuous monitoring and optimization to maximize ROI and improve campaign performance.
          </p>
        </div>
      </div>
    </div>

    <div class="cta-section">
      <h3>Ready to scale with paid advertising?</h3>
      <p>Let's create campaigns that deliver real ROI.</p>
      <a href="/contact" class="cta-button">Launch Your Campaigns</a>
    </div>
  </div>
</ServiceLayout>
