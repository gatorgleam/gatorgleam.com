---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PageHeader from '../../components/layout/PageHeader.astro';
import Section from '../../components/layout/Section.astro';
import Button from '../../components/ui/Button.astro';

const frontmatter = {
  title: 'Social Media Marketing',
  description:
    'Engaging social media strategies that build community and drive brand awareness across all platforms.',
};
---

<BaseLayout frontmatter={frontmatter}>
  <PageHeader>
    <Fragment slot="title">{frontmatter.title}</Fragment>
    <Fragment slot="subtitle">{frontmatter.description}</Fragment>
  </PageHeader>

  <Section bg="default">
    <div class="mx-auto max-w-3xl text-center">
      <h2 class="text-3xl sm:text-4xl font-bold text-neutral-950 mb-6">Social Media That Connects</h2>
      <p class="text-lg text-neutral-600 leading-relaxed">
        Build authentic relationships with your audience through strategic social media marketing. We
        create engaging content, manage your communities, and drive meaningful conversations that turn
        followers into customers.
      </p>
    </div>
  </Section>

  <Section bg="panel">
    <h2 class="text-3xl font-bold text-center text-neutral-950 mb-12">Our Social Media Services</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      <div class="group rounded-2xl border border-neutral-200 shadow-lg bg-white p-8 transition-all duration-300 hover:shadow-2xl hover:-translate-y-2 hover:border-brand-teal">
        <div class="text-brand-teal text-4xl mb-4 transition-transform duration-300 group-hover:scale-110">
          <i class="fas fa-calendar-alt" aria-hidden="true"></i>
        </div>
        <h3 class="text-xl font-bold text-neutral-950 mb-3">Content Strategy</h3>
        <p class="text-neutral-600 leading-relaxed">Strategic content planning that aligns with your brand voice and business objectives.</p>
      </div>
      <div class="group rounded-2xl border border-neutral-200 shadow-lg bg-white p-8 transition-all duration-300 hover:shadow-2xl hover:-translate-y-2 hover:border-brand-teal">
        <div class="text-brand-teal text-4xl mb-4 transition-transform duration-300 group-hover:scale-110">
          <i class="fas fa-users" aria-hidden="true"></i>
        </div>
        <h3 class="text-xl font-bold text-neutral-950 mb-3">Community Management</h3>
        <p class="text-neutral-600 leading-relaxed">Active community engagement that builds relationships and drives customer loyalty.</p>
      </div>
      <div class="group rounded-2xl border border-neutral-200 shadow-lg bg-white p-8 transition-all duration-300 hover:shadow-2xl hover:-translate-y-2 hover:border-brand-teal">
        <div class="text-brand-teal text-4xl mb-4 transition-transform duration-300 group-hover:scale-110">
          <i class="fas fa-chart-line" aria-hidden="true"></i>
        </div>
        <h3 class="text-xl font-bold text-neutral-950 mb-3">Social Analytics</h3>
        <p class="text-neutral-600 leading-relaxed">Track performance and optimize your social media strategy with detailed insights and reporting.</p>
      </div>
      <div class="group rounded-2xl border border-neutral-200 shadow-lg bg-white p-8 transition-all duration-300 hover:shadow-2xl hover:-translate-y-2 hover:border-brand-teal">
        <div class="text-brand-teal text-4xl mb-4 transition-transform duration-300 group-hover:scale-110">
          <i class="fas fa-camera" aria-hidden="true"></i>
        </div>
        <h3 class="text-xl font-bold text-neutral-950 mb-3">Content Creation</h3>
        <p class="text-neutral-600 leading-relaxed">Professional photography, graphics, and video content that captures attention and drives engagement.</p>
      </div>
    </div>
  </Section>

  <Section bg="default" class="text-center">
    <div class="max-w-2xl mx-auto">
      <h3 class="text-3xl font-bold text-neutral-950 mb-4">Ready to grow your social presence?</h3>
      <p class="text-lg text-neutral-600 mb-8">Let's create a social media strategy that drives results.</p>
      <Button variant="primary" href="/contact" class="text-lg px-8 py-4">Boost Your Social Media</Button>
    </div>
  </Section>
</BaseLayout>
