---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/services.css';

const frontmatter = {
  title: 'Our Services',
  description: 'Comprehensive digital solutions to help your brand shine brighter',
};
---

<BaseLayout frontmatter={frontmatter}>
  <div class="page-header">
    <h1>{frontmatter.title}</h1>
    <p>{frontmatter.description}</p>
  </div>

  <div class="services-grid">
    <a href="/services/web-design" class="service-card">
      <div class="service-icon">
        <i class="fas fa-laptop-code"></i>
      </div>
      <h2>Website Design & Development</h2>
      <p>
        Custom-crafted websites that combine stunning design with powerful functionality to create
        an impactful online presence.
      </p>
      <ul class="service-features">
        <li>Responsive Web Design</li>
        <li>Custom Development</li>
        <li>E-commerce Solutions</li>
        <li>SEO Optimization</li>
        <li>Performance Tuning</li>
      </ul>
    </a>

    <a href="/services/social-media" class="service-card">
      <div class="service-icon">
        <i class="fas fa-hashtag"></i>
      </div>
      <h2>Social Media Management</h2>
      <p>
        Strategic social media management that builds engagement, grows your following, and
        strengthens your brand's voice.
      </p>
      <ul class="service-features">
        <li>Content Creation & Curation</li>
        <li>Community Management</li>
        <li>Platform Strategy</li>
        <li>Social Calendar Planning</li>
        <li>Engagement Analytics</li>
      </ul>
    </a>

    <a href="/services/paid-advertising" class="service-card">
      <div class="service-icon">
        <i class="fas fa-bullseye"></i>
      </div>
      <h2>Paid Advertising Campaigns</h2>
      <p>
        Data-driven paid advertising strategies that target your ideal audience and maximize your
        ROI across all platforms.
      </p>
      <ul class="service-features">
        <li>PPC Campaign Management</li>
        <li>Social Media Advertising</li>
        <li>Retargeting Strategies</li>
        <li>Ad Creative Design</li>
        <li>Conversion Optimization</li>
      </ul>
    </a>

    <a href="/services/digital-product" class="service-card">
      <div class="service-icon">
        <i class="fas fa-shopping-bag"></i>
      </div>
      <h2>Digital Product Strategy</h2>
      <p>
        Comprehensive digital product planning and development to bring your ideas to life and
        create new revenue streams.
      </p>
      <ul class="service-features">
        <li>Product Ideation</li>
        <li>Market Research</li>
        <li>Launch Strategy</li>
        <li>User Experience Design</li>
        <li>Monetization Planning</li>
      </ul>
    </a>

    <a href="/services/analytics" class="service-card">
      <div class="service-icon">
        <i class="fas fa-chart-line"></i>
      </div>
      <h2>Analytics & Reporting</h2>
      <p>
        In-depth analytics and clear reporting to track your success and inform data-driven
        decisions for continuous improvement.
      </p>
      <ul class="service-features">
        <li>Performance Tracking</li>
        <li>Custom Reporting</li>
        <li>Data Analysis</li>
        <li>Growth Insights</li>
        <li>ROI Measurement</li>
      </ul>
    </a>

    <a href="/services/email-marketing" class="service-card">
      <div class="service-icon">
        <i class="fas fa-envelope"></i>
      </div>
      <h2>Email Marketing</h2>
      <p>
        Strategic email campaigns that nurture leads, boost engagement, and drive conversions
        through personalized communication.
      </p>
      <ul class="service-features">
        <li>Campaign Strategy</li>
        <li>Email Automation</li>
        <li>List Management</li>
        <li>A/B Testing</li>
        <li>Performance Analytics</li>
      </ul>
    </a>
  </div>

  <section class="cta">
    <h2>Ready to Transform Your Digital Presence?</h2>
    <p>Let's discuss how we can help your brand achieve its goals.</p>
    <a
      href="https://calendly.com/abbyjane-gatorgleamagency"
      target="_blank"
      rel="noopener noreferrer"
      class="cta-button">Schedule a Call</a
    >
  </section>
</BaseLayout>
