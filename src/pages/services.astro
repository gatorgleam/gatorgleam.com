---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/shared.css';

const frontmatter = {
  title: 'Our Services',
  description: 'Comprehensive digital solutions to help your brand shine brighter',
};
---

<BaseLayout frontmatter={frontmatter}>
  <!-- Hero Section -->
  <section class="services-hero">
    <div class="container">
      <div class="section-eyebrow">
        <span class="eyebrow-text">WHAT WE DO</span>
        <div class="gold-divider-small"></div>
      </div>
      <h1>{frontmatter.title}</h1>
      <p class="hero-lead">
        {frontmatter.description}
      </p>
    </div>
  </section>

  <!-- Services Grid (reused from homepage modern cards) -->
  <section class="services-grid-section">
    <div class="container">
      <div class="services-grid-modern">
        <a href="/services/web-design" class="modern-service-card">
          <div class="service-card-bg"></div>
          <div class="service-icon-circle"><i class="fas fa-laptop-code"></i></div>
          <div class="service-card-content">
            <h3>Website Design & Development</h3>
            <p>Beautiful, high-performance websites that convert visitors into customers</p>
            <div class="service-features">
              <span class="feature-tag">Custom Design</span>
              <span class="feature-tag">Mobile-First</span>
              <span class="feature-tag">SEO Optimized</span>
            </div>
          </div>
          <div class="card-arrow"><i class="fas fa-arrow-right"></i></div>
        </a>

        <a href="/services/social-media" class="modern-service-card">
          <div class="service-card-bg"></div>
          <div class="service-icon-circle"><i class="fas fa-share-alt"></i></div>
          <div class="service-card-content">
            <h3>Social Media Management</h3>
            <p>Engaging content strategies that build communities and drive engagement</p>
            <div class="service-features">
              <span class="feature-tag">Content Creation</span>
              <span class="feature-tag">Community Building</span>
              <span class="feature-tag">Analytics</span>
            </div>
          </div>
          <div class="card-arrow"><i class="fas fa-arrow-right"></i></div>
        </a>

        <a href="/services/paid-advertising" class="modern-service-card">
          <div class="service-card-bg"></div>
          <div class="service-icon-circle"><i class="fas fa-bullseye"></i></div>
          <div class="service-card-content">
            <h3>Paid Advertising</h3>
            <p>Strategic ad campaigns that deliver measurable ROI and qualified leads</p>
            <div class="service-features">
              <span class="feature-tag">Google Ads</span>
              <span class="feature-tag">Social Ads</span>
              <span class="feature-tag">Retargeting</span>
            </div>
          </div>
          <div class="card-arrow"><i class="fas fa-arrow-right"></i></div>
        </a>

        <a href="/services/email-marketing" class="modern-service-card">
          <div class="service-card-bg"></div>
          <div class="service-icon-circle"><i class="fas fa-envelope-open-text"></i></div>
          <div class="service-card-content">
            <h3>Email Marketing</h3>
            <p>Personalized email campaigns that nurture leads and boost conversions</p>
            <div class="service-features">
              <span class="feature-tag">Automation</span>
              <span class="feature-tag">Segmentation</span>
              <span class="feature-tag">A/B Testing</span>
            </div>
          </div>
          <div class="card-arrow"><i class="fas fa-arrow-right"></i></div>
        </a>

        <a href="/services/analytics" class="modern-service-card">
          <div class="service-card-bg"></div>
          <div class="service-icon-circle"><i class="fas fa-chart-line"></i></div>
          <div class="service-card-content">
            <h3>Analytics & Reporting</h3>
            <p>Data-driven insights that inform smarter decisions and optimize performance</p>
            <div class="service-features">
              <span class="feature-tag">Performance Tracking</span>
              <span class="feature-tag">Custom Dashboards</span>
              <span class="feature-tag">ROI Analysis</span>
            </div>
          </div>
          <div class="card-arrow"><i class="fas fa-arrow-right"></i></div>
        </a>

        <a href="/services/digital-product" class="modern-service-card">
          <div class="service-card-bg"></div>
          <div class="service-icon-circle"><i class="fas fa-shopping-bag"></i></div>
          <div class="service-card-content">
            <h3>Digital Product Strategy</h3>
            <p>Comprehensive strategies to launch and scale your digital products</p>
            <div class="service-features">
              <span class="feature-tag">Product Launch</span>
              <span class="feature-tag">Market Research</span>
              <span class="feature-tag">Growth Planning</span>
            </div>
          </div>
          <div class="card-arrow"><i class="fas fa-arrow-right"></i></div>
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section-modern">
    <div class="container">
      <div class="section-eyebrow">
        <span class="eyebrow-text">READY TO GET STARTED?</span>
        <div class="gold-divider-small"></div>
      </div>
      <h2>Ready to Transform Your Digital Presence?</h2>
      <p>Let's discuss how we can help your brand achieve its goals.</p>
      <a
        href="https://calendly.com/gatorgleamsmm/30min"
        target="_blank"
        rel="noopener noreferrer"
        class="cta-button">Schedule a Call</a>
    </div>
  </section>
</BaseLayout>

<style>
  /* Services Hero Section */
  .services-hero {
    background: linear-gradient(135deg, #2A7C84 0%, #1F5C62 100%);
    padding: 8rem 2rem 6rem;
    text-align: center;
    color: white;
    position: relative;
    margin-bottom: 4rem;
    overflow: hidden;
  }

  .services-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
      radial-gradient(circle at 20% 50%, rgba(213, 163, 83, 0.12) 0%, transparent 50%),
      radial-gradient(circle at 80% 80%, rgba(255, 255, 255, 0.08) 0%, transparent 50%);
    z-index: 0;
    animation: subtleFloat 20s ease-in-out infinite;
  }

  .services-hero .container {
    position: relative;
    z-index: 1;
  }

  .services-hero .section-eyebrow {
    opacity: 0;
    animation: fadeInUp 0.8s ease-out 0.2s forwards;
  }

  .services-hero h1 {
    color: white;
    font-size: clamp(2.5rem, 5vw, 4rem);
    margin-bottom: 1.5rem;
    opacity: 0;
    animation: fadeInUp 0.8s ease-out 0.4s forwards;
  }

  .hero-lead {
    font-size: clamp(1.125rem, 2vw, 1.5rem);
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.7;
    color: white;
    opacity: 0;
    animation: fadeInUp 0.8s ease-out 0.6s forwards;
  }

  /* Services Grid Section */
  .services-grid-section {
    padding: 4rem 0 6rem;
    background: var(--color-off-white);
    position: relative;
  }

  .services-grid-modern {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
    gap: 2.5rem;
    max-width: 1300px;
    margin: 0 auto 3rem;
    align-items: stretch;
  }

  .services-grid-modern .modern-service-card { opacity: 0; transform: translateY(30px); animation: fadeInUpStagger 0.6s ease-out forwards; }
  .services-grid-modern .modern-service-card:nth-child(1) { animation-delay: 0.1s; }
  .services-grid-modern .modern-service-card:nth-child(2) { animation-delay: 0.2s; }
  .services-grid-modern .modern-service-card:nth-child(3) { animation-delay: 0.3s; }
  .services-grid-modern .modern-service-card:nth-child(4) { animation-delay: 0.4s; }
  .services-grid-modern .modern-service-card:nth-child(5) { animation-delay: 0.5s; }
  .services-grid-modern .modern-service-card:nth-child(6) { animation-delay: 0.6s; }

  /* Modern Service Card â€” exact match with homepage */
  .modern-service-card { position: relative; background: white; border-radius: var(--radius-xl); padding: 2.5rem; border: 2px solid var(--color-border-light); text-decoration: none; color: inherit; transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1); overflow: hidden; display: flex; flex-direction: column; gap: 1.5rem; }
  .service-card-bg { position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: linear-gradient(135deg, rgba(42, 124, 132, 0.05) 0%, rgba(213, 163, 83, 0.05) 100%); opacity: 0; transition: opacity 0.4s ease; pointer-events: none; }
  .modern-service-card::after { content: ''; position: absolute; top: -50%; right: -50%; width: 200%; height: 200%; background: radial-gradient(circle, rgba(213, 163, 83, 0.08) 0%, transparent 70%); opacity: 0; transition: opacity 0.6s ease; pointer-events: none; }
  .modern-service-card:hover .service-card-bg, .modern-service-card:hover::after { opacity: 1; }
  .modern-service-card::before { content: ''; position: absolute; top: 0; left: 0; width: 100%; height: 4px; background: linear-gradient(90deg, var(--color-teal), var(--color-gold)); transform: scaleX(0); transform-origin: left; transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1); }
  .modern-service-card:hover::before { transform: scaleX(1); }
  .modern-service-card:hover { transform: translateY(-12px) scale(1.02); border-color: var(--color-teal); box-shadow: 0 25px 50px rgba(42, 124, 132, 0.2); }

  .service-icon-circle { width: 80px; height: 80px; background: linear-gradient(135deg, var(--color-teal), var(--color-teal-dark)); border-radius: 50%; display: flex; align-items: center; justify-content: center; transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1); position: relative; z-index: 1; box-shadow: 0 4px 15px rgba(42,124,132,0.2); }
  .service-icon-circle::before { content: ''; position: absolute; inset: -3px; border-radius: 50%; background: linear-gradient(135deg, var(--color-teal), var(--color-gold)); opacity: 0; z-index: -1; transition: opacity 0.5s ease; }
  .service-icon-circle::after { content: ''; position: absolute; inset: 0; border-radius: 50%; background: linear-gradient(135deg, rgba(255,255,255,0.2), transparent); opacity: 0; transition: opacity 0.3s ease; }
  .modern-service-card:hover .service-icon-circle { background: linear-gradient(135deg, var(--color-teal), var(--color-gold)); transform: scale(1.15) rotate(360deg); box-shadow: 0 12px 35px rgba(213,163,83,0.4); }
  .modern-service-card:hover .service-icon-circle::before { opacity: 0.5; }
  .modern-service-card:hover .service-icon-circle::after { opacity: 1; }
  .service-icon-circle i { font-size: 2.25rem; color: white; transition: transform 0.5s ease; }
  .modern-service-card:hover .service-icon-circle i { transform: scale(1.1); }

  .service-card-content { flex: 1; position: relative; z-index: 1; }
  .service-card-content h3 { font-size: clamp(1.25rem, 2vw, 1.5rem); color: var(--color-text-primary); margin-bottom: 0.75rem; font-weight: 700; line-height: 1.3; transition: all 0.3s ease; position: relative; }
  .service-card-content h3::after { content: ''; position: absolute; bottom: -0.5rem; left: 0; width: 0; height: 3px; background: linear-gradient(90deg, var(--color-teal), var(--color-gold)); transition: width 0.4s cubic-bezier(0.4,0,0.2,1); border-radius: 2px; }
  .modern-service-card:hover .service-card-content h3 { color: var(--color-teal); }
  .modern-service-card:hover .service-card-content h3::after { width: 60px; }
  .service-card-content p { color: var(--color-text-secondary); line-height: 1.8; margin-bottom: 1rem; font-size: 1rem; }

  .service-features { display: flex; flex-wrap: wrap; gap: 0.625rem; margin-top: 0.5rem; }
  .feature-tag { display: inline-block; padding: 0.5rem 1rem; background: linear-gradient(135deg, rgba(42,124,132,0.1), rgba(42,124,132,0.05)); color: var(--color-teal); border-radius: 25px; font-size: 0.8125rem; font-weight: 700; transition: all 0.4s cubic-bezier(0.4,0,0.2,1); border: 1px solid rgba(42,124,132,0.15); position: relative; overflow: hidden; }
  .feature-tag::before { content: ''; position: absolute; top: 0; left: -100%; width: 100%; height: 100%; background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent); transition: left 0.6s ease; }
  .modern-service-card:hover .feature-tag { background: linear-gradient(135deg, var(--color-teal), var(--color-teal-dark)); color: white; border-color: var(--color-teal); transform: translateY(-2px); box-shadow: 0 4px 12px rgba(42,124,132,0.3); }
  .modern-service-card:hover .feature-tag::before { left: 100%; }
  .modern-service-card:hover .feature-tag:nth-child(1) { transition-delay: 0.05s; }
  .modern-service-card:hover .feature-tag:nth-child(2) { transition-delay: 0.1s; }
  .modern-service-card:hover .feature-tag:nth-child(3) { transition-delay: 0.15s; }

  .card-arrow { position: absolute; bottom: 2rem; right: 2rem; width: 45px; height: 45px; background: linear-gradient(135deg, var(--color-teal), var(--color-teal-dark)); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; opacity: 0; transform: scale(0.5) rotate(-45deg); transition: all 0.5s cubic-bezier(0.4,0,0.2,1); box-shadow: 0 4px 15px rgba(42,124,132,0.3); }
  .card-arrow::before { content: ''; position: absolute; inset: -2px; border-radius: 50%; background: linear-gradient(135deg, var(--color-gold), var(--color-gold-light)); opacity: 0; z-index: -1; transition: opacity 0.3s ease; }
  .modern-service-card:hover .card-arrow { opacity: 1; transform: scale(1) rotate(0deg); }
  .modern-service-card:hover .card-arrow::before { opacity: 1; }
  .card-arrow i { font-size: 1.125rem; transition: transform 0.3s ease; }
  .modern-service-card:hover .card-arrow i { animation: arrowBounce 0.6s ease-in-out infinite; }

  @keyframes arrowBounce { 0%,100% { transform: translateX(0); } 50% { transform: translateX(5px); } }

  /* Service Card Modern */
  .service-card-modern {
    background: white;
    border-radius: var(--radius-xl);
    padding: 0;
    box-shadow: none;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    border: 2px solid var(--color-border-light);
    text-decoration: none;
    color: inherit;
    display: block;
    position: relative;
    overflow: hidden;
  }

  .service-card-modern::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: linear-gradient(90deg, var(--color-teal), var(--color-gold));
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* overlay removed to match contact card visuals */

  .service-card-modern:hover::before {
    transform: scaleX(1);
  }

  /* removed overlay hover */

  .service-card-modern:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(42, 124, 132, 0.15);
    border-color: var(--color-teal);
  }

  .service-card-inner {
    padding: 3rem 2.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .service-number {
    font-size: 0.875rem;
    font-weight: 700;
    color: var(--color-gold);
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
  }

  .service-icon-large {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, var(--color-teal), var(--color-teal-dark));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
    transition: all 0.4s ease;
    position: relative;
  }

  .service-icon-large::before {
    content: '';
    position: absolute;
    inset: -5px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--color-teal), var(--color-gold));
    opacity: 0;
    transition: opacity 0.5s ease;
    z-index: -1;
  }

  .service-card-modern:hover .service-icon-large {
    background: linear-gradient(135deg, var(--color-teal), var(--color-gold));
    transform: scale(1.1) rotate(10deg);
    box-shadow: 0 12px 30px rgba(213, 163, 83, 0.4);
  }

  .service-card-modern:hover .service-icon-large::before {
    opacity: 0.3;
  }

  .service-icon-large i {
    font-size: 2rem;
    color: white;
  }

  .service-card-modern h2 {
    font-size: 1.75rem;
    color: var(--color-text-primary);
    margin-bottom: 1rem;
    line-height: 1.25;
  }

  .service-card-modern p {
    color: var(--color-text-secondary);
    margin-bottom: 1.5rem;
    line-height: 1.7;
  }

  .service-features-list {
    list-style: none;
    padding: 0;
    margin: 0 0 1.5rem 0;
  }

  .service-features-list li {
    color: var(--color-text-secondary);
    margin-bottom: 0.75rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.9375rem;
  }

  .service-features-list i {
    color: var(--color-gold);
    font-size: 0.875rem;
  }

  .service-cta-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-teal);
    font-weight: 700;
    font-size: 1rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
  }

  .service-cta-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--color-gold);
    transition: width 0.3s ease;
  }

  .service-card-modern:hover .service-cta-link {
    gap: 0.75rem;
    color: var(--color-gold);
  }

  .service-card-modern:hover .service-cta-link::after {
    width: calc(100% - 1.5rem);
  }

  .service-cta-link i {
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .service-card-modern:hover .service-cta-link i {
    transform: translateX(6px);
    animation: bounceArrow 0.6s ease-in-out infinite;
  }

  /* CTA Section Modern */
  .cta-section-modern {
    background: linear-gradient(135deg, rgba(42, 124, 132, 0.05) 0%, rgba(31, 92, 98, 0.08) 100%);
    padding: 6rem 2rem;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .cta-section-modern::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(213, 163, 83, 0.1) 0%, transparent 70%);
    transform: translate(-50%, -50%);
    animation: pulse 4s ease-in-out infinite;
  }

  .cta-section-modern .container {
    position: relative;
    z-index: 1;
  }

  .cta-section-modern .section-eyebrow {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease-out 0.2s forwards;
  }

  .cta-section-modern h2 {
    color: var(--color-teal);
    margin-bottom: 1.5rem;
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease-out 0.4s forwards;
  }

  .cta-section-modern p {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
    margin-bottom: 2.5rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease-out 0.6s forwards;
  }

  .cta-section-modern .cta-button {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease-out 0.8s forwards;
  }

  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInUpStagger {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes subtleFloat {
    0%, 100% {
      transform: translateY(0) scale(1);
    }
    50% {
      transform: translateY(-20px) scale(1.05);
    }
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 0.5;
      transform: translate(-50%, -50%) scale(1);
    }
    50% {
      opacity: 0.8;
      transform: translate(-50%, -50%) scale(1.1);
    }
  }

  @keyframes bounceArrow {
    0%, 100% {
      transform: translateX(6px);
    }
    50% {
      transform: translateX(10px);
    }
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .services-hero {
      padding: 6rem 1.5rem 4rem;
    }

    .services-grid-section {
      padding: 3rem 0 4rem;
    }

    .services-grid-modern {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .service-card-inner {
      padding: 2rem;
    }

    .cta-section-modern {
      padding: 4rem 1.5rem;
    }
  }

  /* Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }
  }
</style>
</BaseLayout>
