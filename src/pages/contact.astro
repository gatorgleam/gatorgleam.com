---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/shared.css';

const frontmatter = {
  title: 'Contact',
  description: 'Get in touch with SeaForth Strategies for digital marketing services. Contact us for web design, social media management, and marketing strategy consultation.',
};
---

<BaseLayout frontmatter={frontmatter}>
  <!-- Hero Section -->
  <section class="contact-hero">
    <div class="container">
      <div class="section-eyebrow fade-in">
        <span class="eyebrow-text">GET IN TOUCH</span>
        <div class="gold-divider-small"></div>
      </div>
      <h1 class="fade-in-up">Let's Make Magic Happen</h1>
      <p class="hero-description fade-in-up-delay">
        Ready to transform your digital presence? Book a free consultation and let's turn your 
        vision into results that matter.
      </p>
    </div>
  </section>

  <!-- Primary Contact Methods -->
  <section class="primary-contact-section">
    <div class="container">
      <div class="primary-contact-grid">
        <!-- Email Us -->
        <a href="mailto:contact@seaforthstrategies.com" class="primary-contact-card">
          <div class="primary-icon">
            <i class="fas fa-envelope"></i>
          </div>
          <h2>Email Us</h2>
          <p class="contact-detail">contact@seaforthstrategies.com</p>
          <p class="contact-description">Send us a message anytime. We typically respond within 24 hours.</p>
          <span class="card-link">
            Send Email <i class="fas fa-arrow-right"></i>
          </span>
        </a>

        <!-- Schedule a Call -->
        <a
          href="https://calendly.com/gatorgleamsmm/30min"
          target="_blank"
          rel="noopener noreferrer"
          class="primary-contact-card featured"
        >
          <div class="featured-badge">Most Popular</div>
          <div class="primary-icon">
            <i class="fas fa-calendar-check"></i>
          </div>
          <h2>Schedule a Free Consultation</h2>
          <p class="contact-detail">30-Minute Strategy Call</p>
          <p class="contact-description">Book a time that works for you. Let's discuss your goals and how we can help.</p>
          <span class="card-link">
            Book Now <i class="fas fa-arrow-right"></i>
          </span>
        </a>

        
      </div>
    </div>
  </section>

  <!-- Team Contact Section -->
  <section class="team-contact-section">
    <div class="container">
      <div class="section-header">
        <div class="section-eyebrow">
          <span class="eyebrow-text">OUR TEAM</span>
          <div class="gold-divider-small"></div>
        </div>
        <h2>Reach Out Directly</h2>
        <p class="section-description">Connect with the right team member for your needs</p>
      </div>

      <div class="team-contact-grid">
        <!-- Abby Contact -->
        <div class="team-contact-card">
          <div class="team-contact-header">
            <div class="team-contact-avatar">
              <img src="/images/Abby.png" alt="Abby Lehr" width="120" height="120" loading="lazy" />
            </div>
            <div class="team-contact-info">
              <h3>Abby Lehr</h3>
              <p class="team-role">Co-Founder & Chief Creative Officer</p>
              <p class="team-specialty">Creative Strategy • Brand Design • Content</p>
            </div>
          </div>
          <div class="team-contact-actions">
            <a href="mailto:abby@seaforthstrategies.com" class="team-contact-button">
              <i class="fas fa-envelope"></i>
              Email Abby
            </a>
            <a href="https://www.linkedin.com/in/abbylehr/" target="_blank" rel="noopener noreferrer" class="team-social-link">
              <i class="fab fa-linkedin"></i>
            </a>
          </div>
        </div>

        <!-- Savanna Contact -->
        <div class="team-contact-card">
          <div class="team-contact-header">
            <div class="team-contact-avatar">
              <img src="/images/Savanna.png" alt="Savanna" width="120" height="120" loading="lazy" />
            </div>
            <div class="team-contact-info">
              <h3>Savanna</h3>
              <p class="team-role">Co-Founder & Chief Analytics Officer</p>
              <p class="team-specialty">Data Analytics • Strategy • Performance</p>
            </div>
          </div>
          <div class="team-contact-actions">
            <a href="mailto:savanna@seaforthstrategies.com" class="team-contact-button">
              <i class="fas fa-envelope"></i>
              Email Savanna
            </a>
            <a href="https://www.linkedin.com/company/seaforthstrategies/" target="_blank" rel="noopener noreferrer" class="team-social-link">
              <i class="fab fa-linkedin"></i>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Social & Community Section -->
  <section class="social-section">
    <div class="container">
      <div class="section-header">
        <div class="section-eyebrow">
          <span class="eyebrow-text">CONNECT WITH US</span>
          <div class="gold-divider-small"></div>
        </div>
        <h2>Join Our Community</h2>
        <p class="section-description">Follow along for marketing tips, industry insights, and behind-the-scenes content</p>
      </div>

      <div class="social-grid">
        <a
          href="https://www.instagram.com/seaforthstrategies/"
          target="_blank"
          rel="noopener noreferrer"
          class="social-card instagram"
        >
          <div class="social-icon">
            <i class="fab fa-instagram"></i>
          </div>
          <h3>Instagram</h3>
          <p class="social-handle">@seaforthstrategies</p>
          <p class="social-description">Daily marketing tips & creative inspiration</p>
        </a>

        <a
          href="https://www.linkedin.com/company/seaforthstrategies/"
          target="_blank"
          rel="noopener noreferrer"
          class="social-card linkedin"
        >
          <div class="social-icon">
            <i class="fab fa-linkedin"></i>
          </div>
          <h3>LinkedIn</h3>
          <p class="social-handle">SeaForth Strategies</p>
          <p class="social-description">Business insights & industry updates</p>
        </a>

        <a
          href="https://x.com/seaforthco"
          target="_blank"
          rel="noopener noreferrer"
          class="social-card twitter"
        >
          <div class="social-icon">
            <i class="fab fa-x-twitter"></i>
          </div>
          <h3>X (Twitter)</h3>
          <p class="social-handle">@seaforthco</p>
          <p class="social-description">Quick tips & real-time updates</p>
        </a>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="faq-section">
    <div class="container">
      <div class="section-header">
        <div class="section-eyebrow">
          <span class="eyebrow-text">QUESTIONS?</span>
          <div class="gold-divider-small"></div>
        </div>
        <h2>Frequently Asked Questions</h2>
      </div>

      <div class="faq-grid">
        <div class="faq-item">
          <button class="faq-question" aria-expanded="false">
            <span>What services do you offer?</span>
            <i class="fas fa-chevron-down"></i>
          </button>
          <div class="faq-answer">
            <p>
              We offer comprehensive digital marketing services including website design & development,
              social media management, paid advertising campaigns, email marketing, digital product
              strategy, and analytics & reporting. We tailor our services to meet your specific business goals.
            </p>
          </div>
        </div>

        <div class="faq-item">
          <button class="faq-question" aria-expanded="false">
            <span>How long does it take to get started?</span>
            <i class="fas fa-chevron-down"></i>
          </button>
          <div class="faq-answer">
            <p>
              We can typically start within 1-2 weeks after our initial consultation. The timeline depends
              on the scope of your project and our current capacity. We'll give you a clear timeline
              during our first call.
            </p>
          </div>
        </div>

        <div class="faq-item">
          <button class="faq-question" aria-expanded="false">
            <span>Do you work with small businesses?</span>
            <i class="fas fa-chevron-down"></i>
          </button>
          <div class="faq-answer">
            <p>
              Absolutely! We love working with small and medium-sized businesses. We understand the
              unique challenges you face and create strategies that deliver maximum impact within
              your budget.
            </p>
          </div>
        </div>

        <div class="faq-item">
          <button class="faq-question" aria-expanded="false">
            <span>What's your pricing structure?</span>
            <i class="fas fa-chevron-down"></i>
          </button>
          <div class="faq-answer">
            <p>
              Our pricing is customized based on your specific needs and project scope. We offer both
              project-based pricing and monthly retainers. Book a free consultation to discuss your
              goals and get a tailored quote.
            </p>
          </div>
        </div>

        <div class="faq-item">
          <button class="faq-question" aria-expanded="false">
            <span>What makes SeaForth different?</span>
            <i class="fas fa-chevron-down"></i>
          </button>
          <div class="faq-answer">
            <p>
              We combine creative excellence with data-driven strategy. Our unique partnership brings
              together creative vision (Abby) and analytical precision (Savanna), ensuring every campaign
              is both beautiful and effective. Plus, we're real people who genuinely care about your success.
            </p>
          </div>
        </div>

        <div class="faq-item">
          <button class="faq-question" aria-expanded="false">
            <span>Do you offer one-time projects or ongoing services?</span>
            <i class="fas fa-chevron-down"></i>
          </button>
          <div class="faq-answer">
            <p>
              Both! We offer one-time projects like website design or brand development, as well as
              ongoing services like social media management and monthly marketing support. We'll work
              with you to find the right arrangement for your needs.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="final-cta-section">
    <div class="container">
      <div class="cta-content">
        <h2>Ready to Get Started?</h2>
        <p>Let's chart your course to digital success. Your journey begins with a simple conversation.</p>
        <div class="cta-buttons">
          <a
            href="https://calendly.com/gatorgleamsmm/30min"
            target="_blank"
            rel="noopener noreferrer"
            class="cta-button primary"
          >
            Schedule Your Free Call
          </a>
          <a href="mailto:contact@seaforthstrategies.com" class="cta-button secondary">
            Send Us an Email
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* =============================================================================
     CONTACT HERO SECTION
     ============================================================================= */
  .contact-hero {
    background: linear-gradient(135deg, #2A7C84 0%, #1F5C62 100%);
    padding: 8rem 2rem 6rem;
    text-align: center;
    color: white;
    position: relative;
    margin-bottom: 0;
    overflow: hidden;
  }

  .contact-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
      radial-gradient(circle at 20% 50%, rgba(213, 163, 83, 0.12) 0%, transparent 50%),
      radial-gradient(circle at 80% 80%, rgba(255, 255, 255, 0.08) 0%, transparent 50%);
    z-index: 0;
    animation: subtleFloat 20s ease-in-out infinite;
  }

  .contact-hero .container {
    position: relative;
    z-index: 1;
    max-width: 1000px;
    margin: 0 auto;
  }

  .contact-hero .section-eyebrow {
    margin-bottom: 2rem;
  }

  .contact-hero h1 {
    color: white;
    font-size: clamp(2.5rem, 5vw, 4rem);
    margin-bottom: 1.5rem;
    font-weight: 800;
  }

  .hero-description {
    font-size: clamp(1.125rem, 2vw, 1.5rem);
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.7;
    color: white;
    opacity: 0.95;
  }

  /* =============================================================================
     PRIMARY CONTACT SECTION
     ============================================================================= */
  .primary-contact-section {
    padding: 6rem 2rem;
    background: var(--color-off-white);
  }

  .primary-contact-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .primary-contact-card {
    background: white;
    padding: 3rem 2.5rem;
    border-radius: var(--radius-xl);
    border: 2px solid var(--color-border-light);
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .primary-contact-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: linear-gradient(90deg, var(--color-teal), var(--color-gold));
    transform: scaleX(0);
    transition: transform 0.4s ease;
  }

  .primary-contact-card:hover::before {
    transform: scaleX(1);
  }

  .primary-contact-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(42, 124, 132, 0.15);
    border-color: var(--color-teal);
  }

  .primary-contact-card.featured {
    border-color: var(--color-teal);
    background: linear-gradient(135deg, rgba(42, 124, 132, 0.03) 0%, rgba(213, 163, 83, 0.03) 100%);
  }

  .featured-badge {
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    background: var(--color-gold);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .primary-icon {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, var(--color-teal), var(--color-teal-dark));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
    transition: all 0.4s ease;
  }

  .primary-contact-card:hover .primary-icon {
    background: linear-gradient(135deg, var(--color-teal), var(--color-gold));
    transform: scale(1.1) rotate(10deg);
  }

  .primary-icon i {
    font-size: 2rem;
    color: white;
  }

  .primary-contact-card h2 {
    font-size: 1.5rem;
    color: var(--color-text-primary);
    margin-bottom: 0.75rem;
  }

  .contact-detail {
    font-size: 1.125rem;
    color: var(--color-teal);
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .contact-description {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .card-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-teal);
    font-weight: 600;
    margin-top: auto;
    transition: gap 0.3s ease;
  }

  .primary-contact-card:hover .card-link {
    gap: 0.75rem;
    color: var(--color-gold);
  }

  /* =============================================================================
     TEAM CONTACT SECTION
     ============================================================================= */
  .team-contact-section {
    padding: 6rem 2rem;
    background: white;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-header h2 {
    font-size: clamp(2rem, 4vw, 3rem);
    color: var(--color-teal);
    margin-bottom: 1rem;
  }

  .section-description {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  .team-contact-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 3rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .team-contact-card {
    background: var(--color-off-white);
    padding: 2.5rem;
    border-radius: var(--radius-xl);
    border: 1px solid var(--color-border-light);
    transition: all 0.3s ease;
  }

  .team-contact-card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
  }

  .team-contact-header {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 2rem;
    align-items: flex-start;
  }

  .team-contact-avatar {
    flex-shrink: 0;
  }

  .team-contact-avatar img {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    object-fit: cover;
    object-position: center top;
    border: 3px solid var(--color-teal);
  }

  .team-contact-info h3 {
    font-size: 1.5rem;
    color: var(--color-text-primary);
    margin-bottom: 0.5rem;
  }

  .team-role {
    font-size: 1rem;
    color: var(--color-teal);
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .team-specialty {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
  }

  .team-contact-actions {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .team-contact-button {
    flex: 1;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    background: var(--color-teal);
    color: white;
    padding: 0.875rem 1.5rem;
    border-radius: var(--radius-lg);
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .team-contact-button:hover {
    background: var(--color-teal-dark);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(42, 124, 132, 0.3);
  }

  .team-social-link {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: white;
    border: 2px solid var(--color-border-light);
    border-radius: var(--radius-lg);
    color: var(--color-teal);
    font-size: 1.25rem;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .team-social-link:hover {
    background: var(--color-teal);
    color: white;
    border-color: var(--color-teal);
  }

  /* =============================================================================
     SOCIAL SECTION
     ============================================================================= */
  .social-section {
    padding: 6rem 2rem;
    background: var(--color-off-white);
  }

  .social-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .social-card {
    background: white;
    padding: 2.5rem 2rem;
    border-radius: var(--radius-xl);
    border: 2px solid var(--color-border-light);
    text-decoration: none;
    color: inherit;
    text-align: center;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .social-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: var(--social-color);
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .social-card:hover::before {
    transform: scaleX(1);
  }

  .social-card.instagram { --social-color: #E1306C; }
  .social-card.linkedin { --social-color: #0077B5; }
  .social-card.twitter { --social-color: #000000; }

  .social-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.1);
    border-color: var(--social-color);
  }

  .social-icon {
    width: 70px;
    height: 70px;
    background: linear-gradient(135deg, var(--color-teal), var(--color-teal-dark));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    transition: all 0.3s ease;
  }

  .social-card.instagram:hover .social-icon { background: linear-gradient(135deg, #E1306C, #C13584); }
  .social-card.linkedin:hover .social-icon { background: linear-gradient(135deg, #0077B5, #00A0DC); }
  .social-card.twitter:hover .social-icon { background: linear-gradient(135deg, #000000, #333333); }

  .social-icon i {
    font-size: 2rem;
    color: white;
  }

  .social-card h3 {
    font-size: 1.375rem;
    color: var(--color-text-primary);
    margin-bottom: 0.5rem;
  }

  .social-handle {
    font-size: 1rem;
    color: var(--color-teal);
    font-weight: 600;
    margin-bottom: 0.75rem;
  }

  .social-description {
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
  }

  /* =============================================================================
     FAQ SECTION
     ============================================================================= */
  .faq-section {
    padding: 6rem 2rem;
    background: white;
  }

  .faq-grid {
    max-width: 900px;
    margin: 0 auto;
    display: grid;
    gap: 1.5rem;
  }

  .faq-item {
    background: var(--color-off-white);
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border-light);
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .faq-item:hover {
    box-shadow: var(--shadow-md);
  }

  .faq-question {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 2rem;
    background: none;
    border: none;
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text-primary);
    text-align: left;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .faq-question:hover {
    color: var(--color-teal);
  }

  .faq-question i {
    color: var(--color-teal);
    transition: transform 0.3s ease;
  }

  .faq-question[aria-expanded="true"] i {
    transform: rotate(180deg);
  }

  .faq-answer {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
  }

  .faq-question[aria-expanded="true"] + .faq-answer {
    max-height: 500px;
  }

  .faq-answer p {
    padding: 0 2rem 1.5rem;
    color: var(--color-text-secondary);
    line-height: 1.7;
  }

  /* =============================================================================
     FINAL CTA SECTION
     ============================================================================= */
  .final-cta-section {
    background: linear-gradient(135deg, rgba(42, 124, 132, 0.08) 0%, rgba(31, 92, 98, 0.12) 100%);
    padding: 6rem 2rem;
    text-align: center;
  }

  .cta-content h2 {
    font-size: clamp(2rem, 4vw, 3rem);
    color: var(--color-teal);
    margin-bottom: 1rem;
  }

  .cta-content p {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
    margin-bottom: 2.5rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .cta-buttons .cta-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-height: 48px;
    padding: 0.875rem 1.25rem;
  }

  /* Animations */
  .fade-in {
    animation: fadeIn 0.8s ease-out;
  }

  .fade-in-up {
    animation: fadeInUp 0.8s ease-out 0.2s backwards;
  }

  .fade-in-up-delay {
