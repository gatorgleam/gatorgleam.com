---
import Navigation from '../components/Navigation.astro';
import '../styles/shared.css';
import '../styles/spacing-system.css';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Home â€“ Gator Gleam</title>
    <meta name="description" content="Gator Gleam offers expert digital marketing services including web design, social media management, email marketing, and data analytics to grow your business." />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700;800&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <style>
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }
      body {
        font-family: 'Montserrat', sans-serif;
        background: #FAFAFA;
        color: #1E1E1E;
        line-height: 1.6;
        overflow-x: hidden;
        margin: 0;
        padding: 0;
        width: 100%;
        position: relative;
        scroll-behavior: smooth;
      }
      
      /* Hero Section Styles - Full Width with Animations */
      .hero {
        background: linear-gradient(135deg, #007BFF 0%, #0056b3 100%);
        padding: 8rem 0 6rem;
        text-align: center;
        color: white;
        position: relative;
        min-height: 70vh;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        width: 100vw;
        margin-left: calc(50% - 50vw);
        margin-right: calc(50% - 50vw);
        /* Override the general section styles */
        max-width: none !important;
        margin: 0 !important;
        margin-left: calc(50% - 50vw) !important;
        margin-right: calc(50% - 50vw) !important;
      }

      /* Hero content wrapper */
      .hero-content {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
        z-index: 2;
        position: relative;
      }

      /* Floating Icons */
      .floating-icons {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        overflow: hidden;
        z-index: 1;
        pointer-events: none;
      }

      .floating-icon {
        position: absolute;
        color: rgba(255, 255, 255, 0.15);
        font-size: 2.5rem;
        z-index: 1;
      }

      .floating-icon:nth-child(1) {
        animation: floatIcon1 8s infinite;
        left: 8%;
        top: 15%;
      }
      .floating-icon:nth-child(2) {
        animation: floatIcon2 12s infinite;
        right: 12%;
        top: 12%;
      }
      .floating-icon:nth-child(3) {
        animation: floatIcon3 10s infinite;
        left: 15%;
        bottom: 25%;
      }
      .floating-icon:nth-child(4) {
        animation: floatIcon4 15s infinite;
        right: 15%;
        bottom: 30%;
      }
      .floating-icon:nth-child(5) {
        animation: floatIcon5 11s infinite;
        left: 30%;
        top: 20%;
      }
      .floating-icon:nth-child(6) {
        animation: floatIcon6 9s infinite;
        right: 30%;
        top: 25%;
      }
      .floating-icon:nth-child(7) {
        animation: floatIcon1 13s infinite;
        left: 45%;
        bottom: 20%;
      }
      .floating-icon:nth-child(8) {
        animation: floatIcon2 14s infinite;
        right: 45%;
        bottom: 15%;
      }
      .floating-icon:nth-child(9) {
        animation: floatIcon3 16s infinite;
        left: 60%;
        top: 30%;
      }
      .floating-icon:nth-child(10) {
        animation: floatIcon4 11s infinite;
        right: 55%;
        top: 18%;
      }

      /* Hero Title Styles */
      .hero-title {
        margin-bottom: 2rem;
      }

      .brand-name {
        font-size: clamp(3rem, 6vw, 6rem);
        font-weight: 800;
        margin: 0 0 1rem 0;
        color: white;
        text-shadow: 0 0 20px rgba(255, 255, 255, 0.5),
          0 0 40px rgba(0, 123, 255, 0.3),
          0 0 60px rgba(0, 86, 179, 0.2);
        font-family: 'Montserrat', sans-serif;
        letter-spacing: -2px;
        text-transform: uppercase;
        animation: fadeInUp 1s ease-out, glow 2s ease-in-out infinite alternate;
        filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.3));
      }

      .brand-subtitle {
        font-size: clamp(1.2rem, 2.5vw, 2rem);
        font-weight: 600;
        margin: 0;
        color: rgba(255, 255, 255, 0.9);
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
        font-family: 'Montserrat', sans-serif;
        text-transform: uppercase;
        letter-spacing: 2px;
        animation: fadeInUp 1s ease-out 0.2s both, pulse 3s ease-in-out infinite;
      }

      /* Lead text */
      .lead {
        font-size: clamp(1.1rem, 2vw, 1.5rem);
        margin-top: 2rem;
        max-width: 700px;
        margin-left: auto;
        margin-right: auto;
        color: rgba(255, 255, 255, 0.95);
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
        line-height: 1.6;
        animation: fadeInUp 1s ease-out 0.4s both;
      }

      /* Hero CTA Section */
      .hero-cta {
        margin-top: 3rem;
        display: flex;
        gap: 1.5rem;
        justify-content: center;
        flex-wrap: wrap;
        opacity: 0;
        animation: fadeInUp 1s ease-out 0.6s both;
      }

      .hero-cta-button {
        display: inline-block;
        padding: 1rem 2.5rem;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
        position: relative;
        overflow: hidden;
      }

      .hero-cta-button:before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.5s;
      }

      .hero-cta-button:hover:before {
        left: 100%;
      }

      .hero-cta-button:not(.secondary) {
        background: white;
        color: #007BFF;
        animation: subtlePulse 3s ease-in-out infinite;
      }

      .hero-cta-button:not(.secondary):hover {
        background: #f8f9fa;
        transform: translateY(-3px);
        box-shadow: 0 12px 35px rgba(0, 0, 0, 0.3);
        animation: none; /* Stop pulse on hover */
      }

      .hero-cta-button.secondary {
        background: transparent;
        color: white;
        border: 2px solid white;
      }

      .hero-cta-button.secondary:hover {
        background: white;
        color: #007BFF;
        transform: translateY(-3px);
        box-shadow: 0 12px 35px rgba(0, 0, 0, 0.3);
      }

      /* Main content sections (exclude hero) */
      section:not(.hero) {
        padding: var(--space-4xl) var(--space-lg);
        max-width: var(--container-xl);
        margin: 0 auto;
      }
      
      /* Header styles are now handled by shared.css */
      
      .intro {
        text-align: center;
      }
      
      .intro p {
        max-width: 800px;
        margin: 0 auto;
        line-height: 1.7;
      }
      
      .service-preview {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: var(--space-xl);
        margin-top: var(--space-2xl);
      }

      .service-box {
        background: white;
        border-radius: var(--radius-lg);
        padding: var(--space-xl);
        box-shadow: var(--shadow-md);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        text-align: left;
        border: 1px solid rgba(0, 0, 0, 0.05);
        position: relative;
        overflow: hidden;
        opacity: 1;
        cursor: pointer;
        height: 100%;
        display: flex;
        flex-direction: column;
      }

      .service-box::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 4px;
        background: #007BFF;
        transform: scaleX(0);
        transform-origin: left;
        transition: transform 0.3s ease;
      }
      .service-box::after {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        width: 120%;
        height: 120%;
        background: radial-gradient(
          circle,
          rgba(0, 123, 255, 0.1) 0%,
          rgba(0, 86, 179, 0.1) 50%,
          transparent 70%
        );
        transform: translate(-50%, -50%) scale(0);
        transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        z-index: 0;
      }
      .service-box:hover {
        transform: translateY(-6px) scale(1.02);
        box-shadow: 0 16px 32px rgba(0, 0, 0, 0.15);
      }
      .service-box:hover::before {
        transform: scaleX(1);
      }
      .service-box:hover::after {
        transform: translate(-50%, -50%) scale(1);
      }
      .service-box h3 {
        margin-bottom: 1rem;
        color: #1E1E1E;
        font-weight: 700;
        z-index: 1;
        position: relative;
        transition: all 0.3s ease;
        /* Font size handled by shared.css */
      }
      .service-box:hover h3 {
        color: #007BFF;
        transform: translateY(-2px);
      }
      .service-box p {
        font-size: 1rem;
        line-height: 1.6;
        color: #4A4A4A;
        z-index: 1;
        position: relative;
        margin-bottom: 1.5rem;
        transition: all 0.3s ease;
      }
      .service-box:hover p {
        color: #1E1E1E;
      }
      .service-link {
        display: inline-flex;
        align-items: center;
        color: #007BFF;
        text-decoration: none;
        font-weight: 600;
        z-index: 1;
        position: relative;
        transition: all 0.3s ease;
        gap: 0.5rem;
      }
      .service-link:hover {
        color: #007BFF;
        transform: translateX(5px);
        opacity: 0.8;
      }
      .service-link:hover i {
        transform: translateX(3px);
      }
      .service-link i {
        transition: transform 0.3s ease;
      }

      .nav-spacer {
        width: 60px;
      }

      /* Animations */
      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes glow {
        from {
          text-shadow: 0 0 20px rgba(255, 255, 255, 0.5),
            0 0 40px rgba(0, 123, 255, 0.3),
            0 0 60px rgba(0, 86, 179, 0.2);
        }
        to {
          text-shadow: 0 0 30px rgba(255, 255, 255, 0.8),
            0 0 60px rgba(0, 123, 255, 0.5),
            0 0 90px rgba(0, 86, 179, 0.3);
        }
      }

      @keyframes pulse {
        0%, 100% {
          opacity: 0.9;
        }
        50% {
          opacity: 1;
        }
      }

      @keyframes subtlePulse {
        0%, 100% {
          box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
        }
        50% {
          box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2), 0 0 0 8px rgba(255, 255, 255, 0.3);
        }
      }

      @keyframes floatIcon1 {
        0%, 100% {
          transform: translate(0, 0) rotate(0deg);
        }
        50% {
          transform: translate(20px, -20px) rotate(10deg);
        }
      }

      @keyframes floatIcon2 {
        0%, 100% {
          transform: translate(0, 0) rotate(0deg);
        }
        50% {
          transform: translate(-15px, -25px) rotate(-5deg);
        }
      }

      @keyframes floatIcon3 {
        0%, 100% {
          transform: translate(0, 0) rotate(0deg);
        }
        50% {
          transform: translate(25px, -15px) rotate(15deg);
        }
      }

      @keyframes floatIcon4 {
        0%, 100% {
          transform: translate(0, 0) rotate(0deg);
        }
        50% {
          transform: translate(-20px, -20px) rotate(-15deg);
        }
      }

      @keyframes floatIcon5 {
        0%, 100% {
          transform: translate(0, 0) rotate(0deg);
        }
        50% {
          transform: translate(15px, -30px) rotate(5deg);
        }
      }

      @keyframes floatIcon6 {
        0%, 100% {
          transform: translate(0, 0) rotate(0deg);
        }
        50% {
          transform: translate(-25px, -25px) rotate(-10deg);
        }
      }

      /* Tablet and Desktop Responsive */
      @media (min-width: 1024px) {
        .service-box {
          flex: 0 1 calc(33.333% - 1.2rem);
        }
      }

      /* Mobile responsive styles */
      @media (max-width: 768px) {
        .hero {
          padding: 6rem 0 4rem;
          min-height: 60vh;
          clip-path: polygon(0 0, 100% 0, 100% 90%, 0 100%);
        }

        .hero-content {
          padding: 0 1.5rem;
        }

        .brand-name {
          font-size: clamp(2.5rem, 10vw, 4rem);
          letter-spacing: -1px;
        }

        .brand-subtitle {
          font-size: clamp(1rem, 2vw, 1.5rem);
          letter-spacing: 1px;
        }

        .lead {
          font-size: clamp(1rem, 2vw, 1.25rem);
          margin-top: 1.5rem;
        }

        .hero-cta {
          margin-top: 2rem;
          flex-direction: column;
          align-items: center;
          gap: 1rem;
        }

        .hero-cta-button {
          width: 100%;
          max-width: 280px;
          padding: 1rem 2rem;
          font-size: 1rem;
        }

        .floating-icon {
          font-size: 2rem;
        }

        section {
          padding: 4rem 1.5rem;
        }

        .intro p {
          font-size: 1.125rem;
        }

        .service-box {
          flex: 1 1 100%;
          padding: 2rem;
        }

        .service-box p {
          font-size: 0.95rem;
        }
      }
    </style>
  </head>
  <body>
    <Navigation />

    <section class="hero">
      <div class="floating-icons">
        <i class="floating-icon fas fa-laptop-code"></i>
        <i class="floating-icon fas fa-chart-line"></i>
        <i class="floating-icon fas fa-hashtag"></i>
        <i class="floating-icon fas fa-paint-brush"></i>
        <i class="floating-icon fas fa-mobile-alt"></i>
        <i class="floating-icon fas fa-bullhorn"></i>
        <i class="floating-icon fas fa-search"></i>
        <i class="floating-icon fas fa-comments"></i>
        <i class="floating-icon fas fa-photo-video"></i>
        <i class="floating-icon fas fa-rocket"></i>
      </div>
      <div class="hero-content">
        <div class="hero-title">
          <h1 class="brand-name">Gator Gleam</h1>
          <h2 class="brand-subtitle">Digital Marketing Agency</h2>
        </div>
        <p class="lead">
          Helping bold, brilliant brands shine online with stunning websites, content, and digital
          products.
        </p>
        <div class="hero-cta">
          <a href="https://calendly.com/abbyjane-gatorgleamagency" target="_blank" rel="noopener noreferrer" class="hero-cta-button">
            Get Started Today
          </a>
          <a href="/services" class="hero-cta-button secondary">
            View Our Services
          </a>
        </div>
      </div>
    </section>

    <section class="intro">
      <h2>Elevate Your Brand's Digital Presence</h2>
      <p>
        At Gator Gleam, we create stunning digital experiences that captivate your audience and
        drive real results. From cutting-edge web design to data-driven marketing strategies, we're
        here to make your brand shine brighter than the competition.
      </p>

      <div class="service-preview">
        <div class="service-box">
          <h3><i class="fas fa-laptop-code"></i> Web Design & Development</h3>
          <p>
            Beautiful, responsive websites that convert visitors into customers and represent your
            brand perfectly.
          </p>
          <a href="/services/web-design" class="service-link"
            >Learn More <i class="fas fa-arrow-right"></i></a
          >
        </div>

        <div class="service-box">
          <h3><i class="fas fa-chart-line"></i> Analytics & Data</h3>
          <p>
            Data-driven insights to optimize your digital strategy and maximize your return on
            investment.
          </p>
          <a href="/services/analytics" class="service-link"
            >Learn More <i class="fas fa-arrow-right"></i></a
          >
        </div>

        <div class="service-box">
          <h3><i class="fas fa-hashtag"></i> Social Media Marketing</h3>
          <p>
            Engaging social media strategies that build community and drive brand awareness across
            all platforms.
          </p>
          <a href="/services/social-media" class="service-link"
            >Learn More <i class="fas fa-arrow-right"></i></a
          >
        </div>

        <div class="service-box">
          <h3><i class="fas fa-bullhorn"></i> Paid Advertising</h3>
          <p>
            Strategic paid campaigns that reach your ideal customers and deliver measurable results.
          </p>
          <a href="/services/paid-advertising" class="service-link"
            >Learn More <i class="fas fa-arrow-right"></i></a
          >
        </div>

        <div class="service-box">
          <h3><i class="fas fa-envelope"></i> Email Marketing</h3>
          <p>
            Personalized email campaigns that nurture leads and turn subscribers into loyal
            customers.
          </p>
          <a href="/services/email-marketing" class="service-link"
            >Learn More <i class="fas fa-arrow-right"></i></a
          >
        </div>

        <div class="service-box">
          <h3><i class="fas fa-mobile-alt"></i> Digital Products</h3>
          <p>
            Custom digital solutions and products that streamline your business and enhance user
            experience.
          </p>
          <a href="/services/digital-product" class="service-link"
            >Learn More <i class="fas fa-arrow-right"></i></a
          >
        </div>
      </div>
    </section>

    <section class="cta">
      <h2>Ready to Make Your Brand Gleam?</h2>
      <p>
        Let's create something amazing together. From concept to launch, we're your partners in
        digital success.
      </p>
      <a href="/contact" class="cta-button">Get Started Today</a>
    </section>
  </body>
</html>

<style>
  .cta {
    background: #F5F5F5;
    text-align: center;
    padding: 8rem 2rem;
    margin-top: -2rem;
    position: relative;
    overflow: hidden;
  }
  .cta::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      45deg,
      transparent 45%,
      rgba(255, 255, 255, 0.1) 50%,
      transparent 55%
    );
    background-size: 200% 200%;
    animation: shine 3s infinite;
  }
  .cta h2 {
    animation: fadeInUp 0.6s ease-out forwards;
    /* Font size handled by shared.css */
  }
  .cta p {
    font-size: 1.25rem;
    margin: 1.5rem 0 2.5rem;
    opacity: 1;
  }
  .cta-button {
    display: inline-block;
    padding: 1rem 2.5rem;
    background: #007BFF;
    color: white;
    text-decoration: none;
    border-radius: 50px;
    font-weight: 600;
    transition: all 0.3s ease;
    opacity: 1;
  }
  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
    opacity: 0.9;
  }
  @keyframes shine {
    0% {
      background-position: 200% 0;
    }
    100% {
      background-position: -200% 0;
    }
  }
</style>

