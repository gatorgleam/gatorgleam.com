---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/shared.css';

const frontmatter = {
  title: 'Home',
  description: 'SeaForth Strategies offers expert digital marketing services including web design, social media management, email marketing, and data analytics to grow your business.',
};
---

<BaseLayout frontmatter={frontmatter}>
  <!-- Hero Section with Parallax -->
  <section class="hero-section">
    <div class="hero-bg"></div>
    <div class="hero-waves">
      <div class="wave wave-1"></div>
      <div class="wave wave-2"></div>
      <div class="wave wave-3"></div>
      </div>
    <div class="container hero-content">
      <div class="hero-logo fade-in-up">
          <img 
            src="/images/logo.png" 
            alt="SeaForth Strategies" 
          class="logo-image" 
          width="600" 
          height="150" 
            loading="eager"
          />
        </div>
      <p class="hero-tagline fade-in-up stagger-2">
        Where Strategy Meets Storytelling
      </p>
      <div class="hero-cta fade-in-up stagger-3">
          <a 
            href="https://calendly.com/gatorgleamsmm/30min" 
            target="_blank" 
            rel="noopener noreferrer" 
          class="cta-button"
          >
          Book Your Free Call
          </a>
        <a href="/services" class="cta-button btn-secondary">
          Explore Our Services
          </a>
        </div>
      </div>
    
    <!-- Smooth Wave Divider -->
