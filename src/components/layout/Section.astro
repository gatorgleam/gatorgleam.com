---
const { bg = 'default', class: cls = '' } = Astro.props;
const bgOptions = ['default', 'panel', 'tint'] as const;
type BgKey = typeof bgOptions[number];
const bgMap: Record<BgKey, string> = {
  default: 'bg-white',
  panel:   'bg-[var(--panel)]',
  tint:    'bg-[color-mix(in srgb, var(--brand-teal) 6%, white)]'
};
const chosenBg: BgKey = (bgOptions as readonly string[]).includes(bg as string)
  ? (bg as BgKey)
  : 'default';
---
---
<section class={`${bgMap[chosenBg]} ${cls}`}>
  <div class="mx-auto w-full max-w-7xl px-4 sm:px-6 lg:px-8 py-10 sm:py-14 lg:py-20">
    <slot />
  </div>
</section>


